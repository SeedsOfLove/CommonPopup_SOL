<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_corner_bg_white">

    <ImageView
        android:id="@+id/iv_confirm_dialog_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:src="@mipmap/alert_dialog_confirm"/>

    <TextView
        android:id="@+id/tv_confirm_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:text="   是否确定？"
        android:textSize="20sp"
        android:textColor="@color/cp_colorFont_black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_confirm_dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXX"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textColor="@color/cp_colorFont_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_confirm_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="40dp"
            android:text="确定"
            android:textSize="15sp"
            android:textColor="@color/cp_colorFont_black"
            android:background="@drawable/popup_button_bg_gray"/>

        <Button
            android:id="@+id/btn_confirm_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="@color/cp_colorFont_black"
            android:background="@drawable/popup_button_bg_gray"/>

    </LinearLayout>

</LinearLayout>
