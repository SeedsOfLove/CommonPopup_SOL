<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_corner_bg_white">

    <ImageView
        android:id="@+id/iv_basic_dialog_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:src="@mipmap/alert_dialog_basic"/>

    <TextView
        android:id="@+id/tv_basic_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:text="提示"
        android:textSize="20sp"
        android:textColor="@color/cp_colorFont_black"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none">

        <TextView
            android:id="@+id/tv_basic_dialog_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXX"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/cp_colorFont_gray"/>

    </ScrollView>

    <Button
        android:id="@+id/btn_basic_dialog_ok"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="确定"
        android:textSize="15sp"
        android:textColor="@color/cp_colorFont_black"
        android:background="@drawable/popup_button_bg_gray"/>

</LinearLayout>
