<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_corner_bg_white">

    <TextView
        android:id="@+id/tv_edit_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="提示"
        android:textSize="20sp"
        android:textColor="@color/cp_colorFont_black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_edit_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp"
        android:inputType="text"
        android:lines="1"
        android:background="@drawable/round_corner_bg_white_frame"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_edit_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="40dp"
            android:text="确定"
            android:textSize="15sp"
            android:textColor="@color/cp_colorFont_black"
            android:background="@drawable/popup_button_bg_gray"/>

        <Button
            android:id="@+id/btn_edit_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="@color/cp_colorFont_black"
            android:background="@drawable/popup_button_bg_gray"/>

    </LinearLayout>

</LinearLayout>
